    <%= f.text_field :schoolurl, class: "form-control", placeholder: "School location" %>
  </div>
  <div class="form-group col-md-6">
    <label for="start">Start Year:</label> <br>
    <%= f.date_select :startdate, start_year: 1980 %>
  </div>
  <div class="form-group col-md-6">
    <label for="start">End Year:</label> <br>
    <%= f.date_select :enddate, start_year: 1980 %>
  </div>
  <div class="form-group col-md-12">
    <%= f.text_area :description, class: "form-control", size: "30x10", placeholder: "Work Description" %>
  </div>
  <div class="form-group col-md-12">
