<!-- HOME BUTTONS STARTS -->
	<div class="row top30">
		<div class="col-md-12 text-right">
			<%= buttons(@buttons) %>
		</div>
		<% @buttons.each do |button| %>
			<% if count_buttons(@buttons) == 3 %>
				<div class="col-md-4 top5">
					<%= link_to "Edit", edit_home_user_button_path(@home_user, button), class: "label label-warning" %> <%= link_to "Delete", home_user_button_path(@home_user, button), method: :delete, data: { confirm: 'Are you sure?'}, class: "label label-danger" %> <br>
					<%= link_to "#{button.name}", "http://#{button.url}", target:"_blank", class: "btn btn-default btn-lg btn-bold top5" %> 
				</div>
			<% elsif count_buttons(@buttons) == 2 %>
				<div class="col-md-6 top5">
					<%= link_to "Edit", edit_home_user_button_path(@home_user, button), class: "label label-warning" %> <%= link_to "Delete", home_user_button_path(@home_user, button), method: :delete, data: { confirm: 'Are you sure?'}, class: "label label-danger" %> <br>
					<%= link_to "#{button.name}", "http://#{button.url}", target:"_blank", class: "btn btn-default btn-lg btn-bold top5" %> 
				</div>
			<% else %>
				<div class="col-md-12 top5">
					<%= link_to "Edit", edit_home_user_button_path(@home_user, button), class: "label label-warning" %> <%= link_to "Delete", home_user_button_path(@home_user, button), method: :delete, data: { confirm: 'Are you sure?'}, class: "label label-danger" %> <br>
					<%= link_to "#{button.name}", "http://#{button.url}", target:"_blank", class: "btn btn-default btn-lg btn-bold top5" %> 
				</div>
			<% end %>
		<% end %> 
	</div>
<!-- HOME BUTTONS STARTS -->







