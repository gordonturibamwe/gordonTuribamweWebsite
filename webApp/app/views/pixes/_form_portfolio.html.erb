
<%= form_for([@about_user, @work, @portfolio, @pix], :html => { :multipart => true }) do |f| %>
  <% if @pix.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pix.errors.count, "error") %> prohibited this pix from being saved:</h2>

      <ul>
      <% @pix.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group col-md-8">
    <%= f.file_field :image, class: "btn btn-default btn-sm btn-success" %>
  </div>
  <div class="form-group col-md-4"> </div>

  <div class="form-group col-md-12 top10">
    <%= f.text_field :name, class: "form-control", placeholder: "Image Name" %>
  </div>
  <div class="form-group col-md-12">
    <%= f.text_field :caption, class: "form-control", placeholder: "Caption Image", rows: "3" %>
  </div>
  <div class="form-group col-md-12">
    <hr>
  </div>
  <div class="form-group col-md-6">
    <%= f.submit "Save", class: "btn btn-primary btn-md" %>
  </div>
<% end %>
