<%= form_for([@home_user, @button]) do |f| %>
  <% if @button.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@button.errors.count, "error") %> prohibited this button from being saved:</h2>

      <ul>
      <% @button.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-md-12">
    <%= f.text_field :name, class: "form-control", placeholder: "Button Name", autofocus: true %>
  </div>
  <div class="form-group col-md-12">
    <%= f.text_field :url, class: "form-control", placeholder: "Button Link - www.google.com" %>
  </div>
  <div class="form-group col-md-12">
    <hr>
  </div>
  <div class="form-group col-md-6">
    <%= f.submit "Save", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
